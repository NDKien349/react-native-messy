{
  "name": "@vokhuyet/react-native-messy",
  "version": "0.2.10",
  "description": "chat ui",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-messy-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vokhuyetOz/react-native-messy.git"
  },
  "author": "Vok <vokhuyet.ict@gmail.com> (https://github.com/vokhuyetOz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vokhuyetOz/react-native-messy/issues"
  },
  "homepage": "https://github.com/vokhuyetOz/react-native-messy#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@vokhuyet/native-hooks": "^0.0.2",
    "dayjs": "^1.11.10",
    "emojilib": "^3.0.11",
    "react-native-parsed-text": "^0.0.22",
    "react-native-zoom-reanimated": "^1.4.8",
    "unicode-emoji-json": "^0.6.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@gorhom/bottom-sheet": "5.0.0-alpha.11",
    "@react-native/eslint-config": "^0.72.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@shopify/flash-list": "^1.7.1",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^28.1.2",
    "@types/react": "^18.2.61",
    "@types/react-native": "0.73.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fbjs": "^3.0.4",
    "jest": "^28.1.1",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-builder-bob": "^0.20.0",
    "react-native-gesture-handler": "^2.20.0",
    "react-native-image-picker": "^7.1.2",
    "react-native-keyboard-controller": "^1.13.4",
    "react-native-pager-view": "^6.4.1",
    "react-native-reanimated": "^3.15.3",
    "react-native-tab-view": "^3.5.2",
    "react-native-video": "6.6.3",
    "release-it": "^15.0.0",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "@types/react": "18.2.61"
  },
  "peerDependencies": {
    "@gorhom/bottom-sheet": "*",
    "@shopify/flash-list": ">=1.6.3",
    "dayjs": "*",
    "fbjs": "*",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-image-picker": "*",
    "react-native-keyboard-controller": "*",
    "react-native-pager-view": "*",
    "react-native-reanimated": "*",
    "react-native-tab-view": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
